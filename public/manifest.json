{
	"name": "Eclipser - Block Feeds, Hide Distractions!",
  "short_name": "Eclipser",
	"version": "1.0.9",
	"manifest_version": 2,
	"description": "Stay focused! Filter out distractions, get some work done!",
  "icons": 
  {
		"128":"logo512.png",
		"48":"logo512.png",
		"16":"logo512.png"
	},
  "content_scripts":[
		{
			"js": ["static/js/content.js"],
			"matches": [ "*://*/*" ],
			"run_at": "document_start"
		 }
	],
  "browser_action": {
		"default_popup": "index.html",
		"default_title": "Eclipser!",
		"default_icon": "logo512.png"
	}
}
