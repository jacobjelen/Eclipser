{
	"name": "Eclipser - Block Feeds, Hide Distractions!",
  "short_name": "Eclipser",
	"version": "2.0.0",
	"manifest_version": 2,
	"description": "Stay focused! Filter out distractions, get some work done!",
	"icons": {
		"128":"imgs/128.png",
		"48":"imgs/48.png",
		"16":"imgs/16.png"
	},
  "content_scripts":[
		{
			"js": ["/static/js/jquery-3.6.0.min.js","static/js/content.js"],
			"matches": [ "*://*/*" ],
			"run_at": "document_start",
			"css": ["static/css/content.css"]
		 }
	],
  "browser_action": {
		"default_popup": "index.html",
		"default_title": "Eclipser!",
		"default_icon": "imgs/128.png"
	},
	"background": {
		"persistent": true,
		"scripts": ["/static/js/defaults.js", "/static/js/background.js" ]
	 },
	"permissions": ["storage","tabs","alarms"], 
	"web_accessible_resources": [
		"static/css/content.css", 
		"static/css/fonts/DINPro-Bold.woff2",
		"static/css/fonts/DINPro-Bold.woff",
		"static/css/fonts/DINPro-Medium.woff2",
		"static/css/fonts/DINPro-Medium.woff",
		"static/css/fonts/DINPro-Regular.woff2",
		"static/css/fonts/DINPro-Regular.woff",
		"static/css/fonts/DINPro-Black.woff2",
		"static/css/fonts/DINPro-Black.woff",
		"static/css/fonts/DINPro-Light.woff2",
		"static/css/fonts/DINPro-Light.woff"
	]
}
